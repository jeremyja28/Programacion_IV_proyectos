# Configuración del entorno Flask
# Establece el entorno de ejecución (development, production, testing)
FLASK_ENV=development

# Configuración de la base de datos MySQL
# Dirección del servidor de base de datos
DB_HOST=localhost

# Nombre de la base de datos a utilizar
DB_NAME=proyecto_grafos

# Usuario de la base de datos
DB_USER=root

# Contraseña del usuario de la base de datos (vacía para root local)
DB_PASSWORD=

# Puerto de conexión a MySQL (puerto por defecto: 3306)
DB_PORT=3306